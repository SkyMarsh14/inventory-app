<h1>Gadget Database</h1>
<table>
    <caption>Device List</caption>
    <thead>
        <th scope="col">Name</th>
        <th scope="col">Type</th>
        <th scope="col">Brand</th>
        <th scope="col">Action</th>
    </thead>
    <tbody>
        <% for(let i=0;i<data.length;i++){ %>
            <tr>
                <th scope="row"><%=data[i].name %></th>
                <td><%=data[i].categoryname %></td>
                <td><%=data[i].brandname %></td>
                <td>
                    <form class='updateForm'action="/form/<%=data[i].id %>/update" method="get"><button type='submit' class="updateBtn"><span>Edit</span><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button></form>
                    <form class='deleteForm'action="/form/<%=data[i].id %>/delete" method="get"><button type="submit" class="deleteBtn" onClick='return confirm("Are you sure you want to delele item: <%=data[i].name %>?")'>
                        <span>Delete</span>
                        <i class="fa fa-solid fa-trash" aria-hidden="true"></i>
                    </button>
                    </form>

                </td>
            </tr>
            <%} %>
    </tbody>
</table>